#!/bin/bash

indent() {
  sed -u 's/^/       /'
}

echo "-----> Copying ImageMagick Configuration Files"

BUILD_DIR=$1
CACHE_DIR=$2

IMAGE_MAGICK_VERSION=6

VENDOR_DIR="$BUILD_DIR/vendor"
IMAGE_MAGICK_CONFIG_DIR="$VENDOR_DIR/ImageMagick-$IMAGE_MAGICK_VERSION"

if [ ! -d $VENDOR_DIR ]; then
  mkdir -p $VENDOR_DIR
fi

# Copy configuration files
echo "-----> Copying configuration files to: $IMAGE_MAGICK_CONFIG_DIR"
cp -rf /etc/ImageMagick-$IMAGE_MAGICK_VERSION $IMAGE_MAGICK_CONFIG_DIR

# Update Policy
echo "-----> Updating ImageMagick policy.xml"
read -r -d '' IMPOLICY <<'EOF'
<policymap xmlns="">
  <policy domain="resource" name="memory" value="2GiB"/>
  <policy domain="resource" name="map" value="1GiB"/>
  <policy domain="resource" name="width" value="20KP"/>
  <policy domain="resource" name="height" value="20KP"/>
  <policy domain="resource" name="area" value="256MB"/>
  <policy domain="resource" name="disk" value="1GiB"/>
  <policy domain="resource" name="thread" value="4"/>
  <policy domain="resource" name="throttle" value="0"/>
  <!-- <policy domain="delegate" rights="none" pattern="URL" /> -->
  <!-- <policy domain="delegate" rights="none" pattern="HTTPS" /> -->
  <!-- <policy domain="delegate" rights="none" pattern="HTTP" /> -->
  <!-- <policy domain="path" rights="none" pattern="@*"/> -->
  <!-- <policy domain="cache" name="shared-secret" value="passphrase" stealth="true"/> -->
</policymap>
EOF

echo "$IMPOLICY" > $IMAGE_MAGICK_CONFIG_DIR/policy.xml

# Update PATH and LD_LIBRARY_PATH
PROFILE_PATH="$BUILD_DIR/.profile.d/imagemagick.sh"
echo "-----> Updating ImageMagick environment variables at: $PROFILE_PATH"
mkdir -p $(dirname $PROFILE_PATH)
echo "export MAGICK_CONFIGURE_PATH=/app/vendor/ImageMagick-$IMAGE_MAGICK_VERSION" >> $PROFILE_PATH
echo "-----> Done updating environment variables. All set for ImageMagick."
